<Window x:Class="ItemList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItemList"
        mc:Ignorable="d" 
        Title="BIS List" Height="480" Width="1102" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Add">
                    <MenuItem Header="Raid" Click="Add_Raid"/>
                    <MenuItem Header="Boss" Click="Add_Boss"/>
                </MenuItem>
                <MenuItem Header="Remove">
                    <MenuItem Header="Raid" Click="Remove_Raid"/>
                    <MenuItem Header="Boss" Click="Remove_Boss"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Rename:">
                    <MenuItem Header="Raid" Click="Rename_Raid"/>
                    <MenuItem Header="Boss" Click="Rename_Boss"/>
                    <MenuItem Header="Item"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Delete DB">
                    <MenuItem Header="Delete Players"/>
                    <MenuItem Header="Delete Items"/>
                    <MenuItem Header="Delete BISLists"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="Instructions"/>
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>
        <TabControl Grid.Row="1" Background="black" BorderThickness="0">
            <TabItem Header="Main" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Warlock" Background="MediumPurple" HorizontalAlignment="Stretch" TextAlignment="Center"
                        VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="0"
                        TextWrapping="Wrap" />
                    <TextBlock Text="Paladin" Background="LightPink" HorizontalAlignment="Stretch" TextAlignment="Center"
                        VerticalAlignment="Stretch" Grid.Column="2" Grid.Row="0"
                        TextWrapping="Wrap" />
                    <TextBlock Text="Priest" Background="White" HorizontalAlignment="Stretch" TextAlignment="Center"
                        VerticalAlignment="Stretch" Grid.Column="3" Grid.Row="0"
                        TextWrapping="Wrap" />
                    <TextBlock Text="Mage" Background="DeepSkyBlue" HorizontalAlignment="Stretch" TextAlignment="Center"
                        VerticalAlignment="Stretch" Grid.Column="4" Grid.Row="0"
                        TextWrapping="Wrap" />
                    <TextBlock Text="Warrior" Background="SaddleBrown" HorizontalAlignment="Stretch" TextAlignment="Center"
                        VerticalAlignment="Stretch" Grid.Column="5" Grid.Row="0"
                        TextWrapping="Wrap" />
                    <TextBlock Text="Shaman" Background="Blue" HorizontalAlignment="Stretch" TextAlignment="Center"
                        VerticalAlignment="Stretch" Grid.Column="6" Grid.Row="0"
                        TextWrapping="Wrap" />
                    <TextBlock Text="Hunter" Background="Green" HorizontalAlignment="Stretch" TextAlignment="Center"
                        VerticalAlignment="Stretch" Grid.Column="7" Grid.Row="0"
                        TextWrapping="Wrap" />
                    <TextBlock Text="Rouge" Background="Yellow" HorizontalAlignment="Stretch" TextAlignment="Center"
                        VerticalAlignment="Stretch" Grid.Column="8" Grid.Row="0"
                        TextWrapping="Wrap" />
                    <TextBlock Text="Druid" Background="Orange" HorizontalAlignment="Stretch" TextAlignment="Center"
                        VerticalAlignment="Stretch" Grid.Column="9" Grid.Row="0"
                        TextWrapping="Wrap" />
                    
                    <ListBox x:Name="WarlockList" Grid.Column="1" Grid.Row="1" BorderThickness="0"
                        ScrollViewer.VerticalScrollBarVisibility="Auto" Background="black"
                        SelectionChanged="Player_SelectionChange">
                        <ListBox.ItemBindingGroup>
                            <BindingGroup/>
                        </ListBox.ItemBindingGroup>
                        <ListBox.BindingGroup>
                            <BindingGroup/>
                        </ListBox.BindingGroup>
                        <ListBox.GroupStyle>
                            <GroupStyle/>
                        </ListBox.GroupStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding playerName}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">

                                <Setter Property="Background" Value="{Binding playerColor}"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="BorderBrush" Value="black"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
